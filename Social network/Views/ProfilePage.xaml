                <HorizontalStackLayout HorizontalOptions="Start" Spacing="0">
                    <Frame
                        Padding="0"
                        BackgroundColor="White"
                        BorderColor="Transparent"
                        CornerRadius="0"
                        WidthRequest="360">
                        <Grid>
                            <!--  Cột 1: Nội dung  -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackLayout
                                Grid.Column="0"
                                Margin="5,0,0,0"
                                Orientation="Horizontal"
                                Spacing="5"
                                VerticalOptions="Center">

                                <Image
                                    HeightRequest="40"
                                    Source="tony_stark.png"
                                    VerticalOptions="Start"
                                    WidthRequest="40" />
                                <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                    <Label
                                        Margin="0,0,0,0"
                                        FontSize="13"
                                        HorizontalOptions="FillAndExpand"
                                        LineBreakMode="WordWrap"
                                        MaxLines="2">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    FontAttributes="Bold"
                                                    Text="Sáng Bùi"
                                                    TextColor="Black" />
                                                <Span Text=" đã cập nhật ảnh đại diện của anh ấydfad" TextColor="Gray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <HorizontalStackLayout Margin="0,5,0,0">
                                        <Label
                                            FontSize="11"
                                            Text="18 thg 10"
                                            TextColor="Gray" />
                                        <Image
                                            Margin="5,0,0,0"
                                            HeightRequest="10"
                                            Source="private_icon"
                                            WidthRequest="10" />
                                    </HorizontalStackLayout>
                                    <Label
                                        Margin="-40,10,0,0"
                                        BackgroundColor="Transparent"
                                        FontSize="13"
                                        Text="Vui vay thoi chu bo dan con nay" />
                                    <Image
                                        Margin="0,30,0,0"
                                        HeightRequest="300"
                                        Source="loki"
                                        WidthRequest="300" />
                                    <HorizontalStackLayout>
                                        <Image
                                            Margin="-15,20,0,0"
                                            HeightRequest="10"
                                            Source="private_icon"
                                            WidthRequest="10" />
                                        <Image
                                            Margin="5,20,0,0"
                                            HeightRequest="10"
                                            Source="private_icon"
                                            WidthRequest="10" />
                                        <Image
                                            Margin="5,20,0,0"
                                            HeightRequest="10"
                                            Source="private_icon"
                                            WidthRequest="10" />
                                        <Label
                                            Margin="5,20,0,0"
                                            FontSize="12"
                                            Text="Skibidi và người khác"
                                            TextColor="Gray" />
                                        <Label Margin="75,20,0,0" FontSize="12">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="10 " TextColor="Gray" />
                                                    <Span Text="bình luận" TextColor="Gray" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Button
                                            Margin="-10,10,0,0"
                                            Padding="6"
                                            BackgroundColor="Transparent"
                                            BorderColor="Gray"
                                            CornerRadius="200"
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            HeightRequest="30"
                                            Text="Thích"
                                            TextColor="Black"
                                            WidthRequest="70">

                                            <Button.ImageSource>
                                                <FileImageSource File="like_icon.png" />
                                            </Button.ImageSource>
                                        </Button>
                                        <Button
                                            Margin="20,10,0,0"
                                            Padding="6"
                                            BackgroundColor="Transparent"
                                            BorderColor="Gray"
                                            CornerRadius="200"
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            HeightRequest="30"
                                            Text="Bình luận"
                                            TextColor="Black"
                                            WidthRequest="90">
                                            <Button.ImageSource>
                                                <FileImageSource File="like_icon.png" />
                                            </Button.ImageSource>
                                        </Button>
                                        <Button
                                            Margin="20,10,0,0"
                                            Padding="6"
                                            BackgroundColor="Transparent"
                                            BorderColor="Gray"
                                            CornerRadius="200"
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            HeightRequest="30"
                                            Text="Chia sẻ"
                                            TextColor="Black"
                                            WidthRequest="90">

                                            <Button.ImageSource>
                                                <FileImageSource File="like_icon.png" />
                                            </Button.ImageSource>
                                        </Button>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </StackLayout>

                            <!--  Cột 2: Nút Option  -->
                            <Button
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Padding="0"
                                BackgroundColor="Transparent"
                                HeightRequest="20"
                                HorizontalOptions="End"
                                VerticalOptions="Start"
                                WidthRequest="20">
                                <Button.ImageSource>
                                    <FileImageSource File="option_icon.png" />
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>